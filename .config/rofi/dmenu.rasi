 configuration {
	display-drun:    " ";
	display-run:     "$ ";
	display-window:  "ï‹’ ";
    show-icons: false;
    sidebar-mode: false;
}
* {
    background-color:      #1a1a1a;
    border-color:          #fafafa;
    text-color:           #fafafa;
    font:            "DejaVu Sans Mono 10";
}

#window {
    anchor:     north;
    location:   north;
    width:      100%;
    padding:    3px;
    children:   [ horibox ];
}

#horibox {
    orientation: horizontal;
    children:   [ prompt, entry, listview ];
}

#listview {
    layout:     horizontal;
    spacing:    10px;
    lines:      100;
}

#entry {
    expand:     false;
    width:      10em;
}

#element {
    padding: 0px 2px;
}
#element selected {
    text-color: #00afff;
}
