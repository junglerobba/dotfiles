set $mod Mod4

set $term alacritty
set $browser firefox-developer-edition

bindsym $mod+Return exec $term
bindsym $mod+t exec $term -e ranger 
bindsym $mod+Shift+t exec nautilus
bindsym $mod+y exec $browser
bindsym $mod+u exec $term -e aerc
bindsym $mod+i exec $term -e weechat
bindsym $mod+Shift+i exec discord
bindsym $mod+o exec $term -e htop
bindsym $mod+Shift+o exec gnome-system-monitor
bindsym $mod+p exec $term -e pulsemixer
bindsym $mod+Shift+p exec $term -e ncspot
bindsym $mod+Shift+g exec steam

bindsym $mod+Shift+q kill

bindsym $mod+d exec j4-dmenu-desktop --dmenu="dmenu -i" --term="termite"
bindsym $mod+x exec dmenu_run -i
bindsym $mod+g exec steam_dmenu

floating_modifier $mod

bindsym $mod+Mod1+l exec i3lock
bindsym $mod+Mod1+p exec powermenu "dmenu"

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+b split h
bindsym $mod+v split v

bindsym $mod+f fullscreen toggle

bindsym $mod+s sticky toggle
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

bindsym $mod+a focus parent

bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

bindsym $mod+period focus output right
bindsym $mod+comma focus output left

bindsym $mod+Shift+period move container to output right; focus output right
bindsym $mod+Shift+comma move container to output left; focus output left
bindsym $mod+Ctrl+period move workspace to output right
bindsym $mod+Ctrl+comma move workspace to output left

bindsym $mod+Tab workspace back_and_forth

mode "resize" {
	bindsym h resize shrink width 10 px or 10 ppt
	bindsym Shift+h resize shrink width 200 px
	bindsym j resize grow height 10 px or 10 ppt
	bindsym Shift+j resize grow height 200 px
	bindsym k resize shrink height 10 px or 10 ppt
	bindsym Shift+k resize shrink height 200 px
	bindsym l resize grow width 10 px or 10 ppt
	bindsym Shift+l resize grow width 200 px

	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt

	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

mode passthrough {
	bindsym $mod+Pause mode default
}
bindsym $mod+Pause mode passthrough

exec --no-startup-id xinput --set-prop 'Kingsis Peripherals ZOWIE Gaming mouse' 'libinput Accel Profile Enabled' 0, 1
exec --no-startup-id "setxkbmap -layout 'us,us(intl)' -option 'grp:alt_shift_toggle'"

bindsym XF86AudioLowerVolume exec pamixer -d 1
bindsym XF86AudioRaiseVolume exec pamixer -i 1
bindsym XF86AudioMute exec pamixer -t

bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

exec --no-startup-id xrandr --output DisplayPort-1 --mode 1920x1080 --pos 2560x0 --rotate normal --output DisplayPort-0 --primary --mode 2560x1440 --pos 0x0 --rotate normal --output HDMI-A-1 --off --output HDMI-A-0 --off

exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
exec --no-startup-id dunst
exec --no-startup-id feh --bg-fill ~/Pictures/wallpaper
exec --no-startup-id redshift
exec --no-startup-id /usr/lib/gsd-xsettings

exec_always --no-startup-id gsettings set org.gnome.desktop.interface gtk-theme 'Adwaita-dark'
exec_always --no-startup-id gsettings set org.gnome.desktop.interface icon-theme 'Adwaita'
exec_always --no-startup-id gsettings set org.gnome.desktop.interface cursor-theme 'Adwaita'
exec_always --no-startup-id gsettings set org.gnome.desktop.interface font-name 'Roboto 10'
exec_always --no-startup-id gsettings set org.gnome.desktop.interface monospace-font-name 'DejaVu Sans Mono 10'
exec_always --no-startuo-id gsettings set org.gnome.desktop.interface document-font-name 'Noto Sans 10'
exec_always --no-startup-id gsettings set org.gnome.settings-daemon.plugins.xsettings antialiasing rgba
exec_always --no-startup-id gsettings set org.gnome.settings-daemon.plugins.xsettings hinting slight

default_border pixel 2
default_floating_border normal 0
hide_edge_borders smart

font pango:dejavu sans mono 10

bar {
	status_command  i3status | ~/.local/bin/i3spotifystatus
	position top
	tray_output primary
	tray_padding 5
	separator_symbol " "
	colors {
		background #1a1a1a
	}
}

